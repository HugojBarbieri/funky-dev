pipeline {
    agent any
    
    tools {
        maven 'mavenjenkins'
    }
    
    stages {
        stage('Build') {
            steps {
                sh 'mvn spring-boot:build-image "-Dspring-boot.build-image.imageName=hjbarbieri/funkyapp:1.1"'
            }
        }
        stage('Test') {
            steps {
                echo 'mvn test'
            }
            // post {
            //     always {
            //         junit 'target/surefire-reports/*.xml'
            //     }
            // }
        }
        stage('Deploy') {
            steps {
                echo './jenkins/scripts/deliver.sh'
            }
        }
    }
}
