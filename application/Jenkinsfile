pipeline {
    agent any
    
    tools {
        maven 'mavenjenkins'
    }
    
    stages {
        stage('Build') {
            steps {
                sh 'mvn -f application/pom.xml -DskipTests clean install'
            }
        }
        stage('Test') {
            steps {
                echo 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deploy') {
            steps {
                echo './jenkins/scripts/deliver.sh'
            }
        }
    }
}
